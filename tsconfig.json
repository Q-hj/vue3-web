{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"types": ["vite/client"],
		"paths": {
			"@/*": ["./src/*"],
			"#/*": ["./config/*"]
		}
	},
	"include": [
		"types/*.ts",
		"types/*.d.ts",
		"src/**/*.vue",
		"src/pages/**/*.vue",
		"config/**/*.ts",
		"config/*.ts"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
